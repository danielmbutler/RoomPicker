<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dbtechprojects.roomfinder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.dbtechprojects.meetingRoomApp.util.HiltApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/app_icon_splash"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_splash_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dbtechprojects.meetingRoomApp.ui.activities.RoomDetailActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.dbtechprojects.meetingRoomApp.ui.activities.MainActivity" />
        <activity android:name="com.dbtechprojects.meetingRoomApp.ui.activities.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.dbtechprojects.roomfinder.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />
    </application>

</manifest>